  <property name="maxFileSize" value="50MB"/>
  <property name="logFilesPath" value="recloy/logs/"/>
  <property name="patternLog"
          value="%n%-7([%level]) [%date{${datePattern}}]  [%X{requestId}] thread:[%-25.25(%thread)] %logger{40}.%method@%line:%n\t%message%n"/>
  <property name="simplePatternLog" value="%n [%X{requestId}] [%d] [%thread] [level] [%msg]"/>
  <property name="patternDate" value="%d{yyyy-MM-dd}"/>
  <appender name="Console"
          class="ch.qos.logback.core.ConsoleAppender">
  <layout class="ch.qos.logback.classic.PatternLayout">
    <Pattern>${patternLog}</Pattern>
  </layout>
  </appender>

  <appender name="CXF-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
<file>${logFilesPath}/cxf_${hostName}.log</file>
<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
    <charset>UTF-8</charset>
    <Pattern>${patternLog}</Pattern>
</encoder>
<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    <!-- rollover daily -->
    <fileNamePattern>${logFilesPath}/${patternDate}/cxf_${hostName}.${patternDate}.%i.log</fileNamePattern>
    <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${maxFileSize}</maxFileSize>
    </timeBasedFileNamingAndTriggeringPolicy>
</rollingPolicy>
</appender>

  <logger name="org.apache.cxf" level="INFO" additivity="false">
 <appender-ref ref="CXF-LOG"/>
 </logger>
  <logger name="org.quartz" level="ERROR"/>

  <appender name="boomAccess" class="ch.qos.logback.core.rolling.RollingFileAppender">
<file>${logFilesPath}/boom-access_${hostName}.log</file>
 <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
    <charset>UTF-8</charset>
    <Pattern>${simplePatternLog}</Pattern>
 </encoder>
 <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    <!-- rollover daily -->
    <fileNamePattern>${logFilesPath}/${patternDate}/boom-access_${hostName}.${patternDate}.%i.log.gz
    </fileNamePattern>
    <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>${maxFileSize}</maxFileSize>
    </timeBasedFileNamingAndTriggeringPolicy>
  </rollingPolicy>
 </appender>
