    <appender name="BOOM-APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logFilesPath}/tosan-boom_${hostName}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <Pattern>${patternLog}</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logFilesPath}/${patternDate}/tosan-boom_${hostName}.${patternDate}.%i.log.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
